{
  "name": "sigil",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "site"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "version": "bun scripts/version.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.9",
    "typescript": "^5.7.2"
  }
}
